<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            Title="Sügis"
             x:Class="TabbedGorosko.Sügis">
    <!--Pages can be added as references or inline-->
    <ContentPage Title="September">
        <StackLayout>
            <Label Text="Semptembri pilti" FontSize="10"/>
            <Image Source="september.jpg"/>
            <Button Text="Septembri pea pidu" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Oktoober">
        <StackLayout>
            <Label Text="Oktoobri pilti" FontSize="10"/>
            <Image Source="kevadoktoober.jpg"/>
            <Button Text="Oktoobri pea pidu" Clicked="Button_Clicked1"/>
        </StackLayout>
    </ContentPage>

    <ContentPage Title="November">
            <StackLayout>
                <Label Text="Novembri pilti" FontSize="10"/>
                <Image Source="kevadnovember.jpg"/>
            <Button Text="Novembri pea pidu" Clicked="Button_Clicked2"/>
        </StackLayout>
    </ContentPage>
</TabbedPage>